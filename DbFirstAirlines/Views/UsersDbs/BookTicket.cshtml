@model DbFirstAirlines.Models.Booking

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BookTicket">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="JourneyId" class="control-label"></label>
                <input type="number" name="Journeyid" id="Journeyid" value="@ViewBag.JourneyId" />
            </div>
            <div class="form-group">
                <label asp-for="FlightRegistrationId" class="control-label"></label>
                <input type="number" name="Flightregistrationid" id="Flightregistrationid" value="@ViewBag.Flightregistrationid" />
            </div>
             <div class="form-group">
                <label asp-for="NoOfPassengers" class="control-label"></label>
                <input asp-for="NoOfPassengers" class="form-control" />
                <span asp-validation-for="NoOfPassengers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirm" class="btn btn-primary" asp-items="@ViewBag.BookingId" />
            </div>
        </form>
    </div>
</div>

